<div class="container">
  <div class="row offset-1">
    <h5 class="mt-4"><span class="bg-light font-weight-bold px-3 mt-1">応募情報確認</span></h5>
  </div>

  <div class="row">
    <div class="col offset-md-1">
      <table>
        <tr>
          <td class="pt-3 pr-5">イベント名</td>
          <td class="pt-3"><%= @event.name %></td>
        </tr>
        <tr>
          <td class="pt-3 pr-5">会場</td>
          <td class="pt-3"><%= @event.organizer.name %></td>
        </tr>
        <tr>
          <td class="pt-3 pr-5">住所</td>
          <td class="pt-3"><%= @event.organizer.address %></td>
        </tr>
        <tr>
          <td class="pt-3 pr-5">日付</td>
          <td class="pt-3"><%= @event.date %></td>
        </tr>
        <tr>
          <td class="pt-3 pr-5">スケジュール</td>
          <td class="pt-3"><%= @event.schedule %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row offset-1">
    <h5 class="mt-4"><span class="bg-light font-weight-bold px-3 mt-1">応募者情報確認</span></h5>
  </div>

  <div class="row">
    <div class="col offset-md-1">
      <table>
        <tr>
          <td scope="row" class="table-active col-md-3 col-sm-4">氏名</td>
          <td><%= @participation.user.last_name %>　<%= @participation.user.first_name %></td>
        </tr>
        <tr>
          <td class="table-active">カナ</td>
          <td><%= @participation.user.last_name_kana %>　<%= @participation.user.first_name_kana %></td>
        </tr>
        <tr>
          <td class="table-active">電話番号</td>
          <td><%= @participation.user.telephone_number %></td>
        </tr>
        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @participation.user.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <%= form_with model: @participation, url: confirm_path do |f| %>
      <%= f.submit "応募を確定する", class: "btn btn-success font-weight-bold px-4 my-3" %>
    <% end %>
  </div>
</div>