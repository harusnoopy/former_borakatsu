<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <h5 class="my-4"><span class="bg-light font-weight-bold px-3">応募したイベント</span></h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 offset-md-1">
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th scope="col">イベント名</th>
            <th scope="col">開催日</th>
            <th scope="col">主催者</th>
            <th scope="col">応募ステータス</th>
            <th scope="col">いいね</th>
          </tr>
        </thead>
        <% @participations.each do |participation| %>
          <tbody>
            <tr>
              <td>
                <%= link_to event_path(participation.event.id) do %>
                  <%= participation.event.name %>
                <% end %>
              </td>
              <td><%= participation.event.date.strftime('%Y/%m/%d') %></td>
              <td><%= participation.event.organizer.name %></td>
              <td>
                <% if participation.is_applying == true %>
                  <p class="text-success m-0"><strong>応募済</strong></p>
                <% else %>
                  <p class="text-secondary m-0">キャンセル済</p>
                <% end %>
              </td>
              <td>
                <% if participation.event.favorited_by?(current_user) %>
                  <p>
                    <%= link_to event_favorites_path(participation.event.id), method: :delete do %>
                      <span style="color: red"><i class="fas fa-heart"></i></span> <span style="color: black"><%= participation.event.favorites.count %></span>
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to event_favorites_path(participation.event.id), method: :post do %>
                      <span style="color: black"><i class="far fa-heart"></i> <%= participation.event.favorites.count %></span>
                    <% end %>
                  </p>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mb-3">
    <%= paginate @participations %>
  </div>
</div>