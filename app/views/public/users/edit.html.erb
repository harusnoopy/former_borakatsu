<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1">
      <h5 class="my-4"><span class="bg-light font-weight-bold px-3">会員情報編集</span></h5>
    </div>
  </div>

  <%= form_with model: @user, url: user_path do |f| %>
    <div class="row">
      <div class="col-md-8 offset-md-4">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-7 offset-md-2">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td scope="row">氏名</td>
              <td><%= f.text_field :last_name, autocomplete: "last_name", autofocus: true %></td>
              <td><%= f.text_field :first_name, autocomplete: "first_name" %></td>
            </tr>
            <tr>
              <td scope="row">フリガナ</td>
              <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
              <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></td>
            </tr>
            <tr>
              <td scope="row">電話番号</td>
              <td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td>
              <td></td>
            </tr>
            <tr>
              <td scope="row">メールアドレス</td>
              <td colspan="2"><%= f.email_field :email, autocomplete: "email", size: "53" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row justify-content-center">
      <%= f.submit "編集内容を保存", class: "btn btn-success my-3 px-5" %>
      <%= link_to "退会する",  unsubscribe_path, class: "btn btn-danger my-3 ml-5 px-4" %>
    </div>
  <% end %>
</div>