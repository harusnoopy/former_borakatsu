<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1 d-flex justify-content-between">
      <p><span class="bg-light font-weight-bold px-3">主催者一覧</span></p>
      <%= button_to new_admin_organizer_path, method: :get, class: "btn-light bg-white rounded-circle shadow border-0 pull-right" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th scope="col">主催者ID</th>
            <th scope="col">主催者名</th>
            <th scope="col">電話番号</th>
            <th scope="col">住所</th>
          </tr>
        </thead>
        <% @organizers.each do |organizer| %>
          <tbody>
            <tr>
              <th scope="row"><%= organizer.id %></th>
              <td>
                <%= link_to admin_organizer_path(organizer.id) do %>
                  <%= organizer.name %>
                <% end %>
              </td>
              <td><%= organizer.telephone_number %></td>
              <td><%= organizer.address %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mb-3">
    <%= paginate @organizers %>
  </div>
</div>